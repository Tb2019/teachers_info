[{"name": "蔡峥", "school_id": 106, "college_id": 111, "phone": "010-62785892", "email": "zcai@tsinghua.edu.cn", "job_title": "副教授、副系主任", "abstracts": "蔡峥2015年博士毕业于亚利桑那大学。2016年获得哈勃冠名博士后学者。2019年6月加入清华大学天文系。他的研究领域为早期星系宇宙学。特别地，他在z= 2–7 的早期星系、宇宙大尺度结构、与星系际介质的观测方面取得了进展，发表的多篇论文为星系宇宙学理论提供了新的重要限制。他在国际竞争激烈的重大天文设备（包括哈勃太空望远镜、ALMA亚毫米波阵列、KECK等）申请中获得大量观测时间。未来，他的研究方向包括：宇宙早期的星系宇宙学；基于人工智能的光谱大数据分析。同时，他也积极参与下一代6.5米宽视场光谱巡天望远镜的建设。", "directions": "早期星系宇宙学\n基于人工智能的光谱大数据分析", "talent_title": null, "administrative_title": null, "education_experience": "2015年博士毕业于亚利桑那大学", "work_experience": "2019年6月加入清华大学天文系", "patent": null, "project": "下一代6.5米宽视场光谱巡天望远镜的建设", "award": "哈勃冠名博士后学者", "paper": null, "social_job": null, "picture": "https://astro.tsinghua.edu.cn/__local/7/29/22/AFCF98FC97FEA0E84EFEB6E6B8B_7D45528B_100D3.jpg?e=.jpg", "education": "研究生", "qualification": "博士", "job_information": 1, "responsibilities": "副系主任", "office_address": "E319", "origin": "https://astro.tsinghua.edu.cn/zh/info/1039/1098.htm"}, {"name": "崔伟", "school_id": 106, "college_id": 111, "phone": "010-62794113", "email": "cui@tsinghua.edu.cn", "job_title": "教授", "abstracts": null, "directions": null, "talent_title": null, "administrative_title": null, "education_experience": null, "work_experience": null, "patent": null, "project": null, "award": null, "paper": null, "social_job": null, "picture": "https://astro.tsinghua.edu.cn/__local/2/C0/86/B582BD463A24AB0F0F2C831FB97_4FC95875_76F3.jpg?e=.jpg", "education": null, "qualification": null, "job_information": 1, "responsibilities": null, "office_address": "E323", "origin": "https://astro.tsinghua.edu.cn/zh/info/1039/1097.htm"}, {"name": "黄崧", "school_id": 106, "college_id": 111, "phone": null, "email": "shuang@tsinghua.edu.cn", "job_title": "副教授", "abstracts": null, "directions": null, "talent_title": null, "administrative_title": null, "education_experience": null, "work_experience": null, "patent": null, "project": null, "award": null, "paper": null, "social_job": null, "picture": "https://astro.tsinghua.edu.cn/__local/E/11/9E/D61576C51485EC9948D6A66EEAC_791950CD_38145.jpg", "education": null, "qualification": null, "job_information": 1, "responsibilities": null, "office_address": "E315", "origin": "https://astro.tsinghua.edu.cn/zh/info/1039/1340.htm"}, {"name": "李成", "school_id": 106, "college_id": 111, "phone": "010-62794129", "email": "cli2015@tsinghua.edu.cn", "job_title": "教授", "abstracts": null, "directions": null, "talent_title": null, "administrative_title": null, "education_experience": null, "work_experience": null, "patent": null, "project": null, "award": null, "paper": null, "social_job": null, "picture": "https://astro.tsinghua.edu.cn/__local/3/72/06/AB8DD7CAC01A73790EE1168DB19_11503B8E_AE24.jpg?e=.jpg", "education": null, "qualification": null, "job_information": 1, "responsibilities": null, "office_address": "E322", "origin": "https://astro.tsinghua.edu.cn/zh/info/1039/1095.htm"}, {"name": "李菂", "school_id": 106, "college_id": 111, "phone": null, "email": "dili@tsinghua.edu.cn", "job_title": "教授", "abstracts": "李菂，射电天文学家，清华大学讲席教授和中国科学院国家天文台FAST望远镜首席科学家。他开创了几种观测和数据分析技术，包括中性氢窄线自吸收（HINSA）和一种新的反演算法，用于解决尘埃温度分布问题。这些技术促进了对恒星形成区域的重要测量。基于HINSA塞曼效应，他领导获得了对星际磁场的精确测量登上《自然》杂志封面。李博士领导多项重大发现，包括首次探测星际分子氧气、最大的快速射电暴（FRB）事件集、球状星团中最慢的脉冲星等。他提出并实施了创新的高时间频率噪声注入技术，倍增了FAST巡天效率。他发表了300多篇同行评审的期刊文章，包括6篇《自然》和2篇《科学》，成果两次入选“中国科学十大进展”。他荣获中国科学学院杰出科技成就奖，第三届全国创新争先奖，及马塞尔·格罗斯曼奖（“领导最灵敏射电望远镜的科学规划，创新刻画动态宇宙等方面的开创性贡献”）。他在许多国内外组织中担任领导或咨询角色，包括澳大利亚望远镜国家设施（ATNF）指导委员会、平方公里阵列（SKA）科学与工程咨询委员会、以及“突破聆听”计划的咨询小组等。", "directions": null, "talent_title": null, "administrative_title": null, "education_experience": null, "work_experience": null, "patent": null, "project": null, "award": null, "paper": null, "social_job": null, "picture": "https://astro.tsinghua.edu.cn/__local/E/6D/2A/F293916005820F870F8EA3EC57B_2FFD7195_177A3C.jpg", "education": "研究生", "qualification": "博士", "job_information": 1, "responsibilities": null, "office_address": "物理楼E314", "origin": "https://astro.tsinghua.edu.cn/zh/info/1039/2218.htm"}, {"name": "李辉", "school_id": 106, "college_id": 111, "phone": null, "email": "hliastro@tsinghua.edu.cn", "job_title": "助理教授", "abstracts": "李辉2017年博士毕业于密歇根大学天文系。2019年获得哈勃学者奖学金在麻省理工大学和哥伦比亚大学从事博士后研究工作。他专注于通过高分辨率、多尺度、多物理过程的辐射流体力学数值模拟研究星系和恒星形成与演化。在近十年的工作中，他主持和参与了数个国际合作的星系和恒星数值模拟的项目，包括IllustrisTNG、SMUGGLE、Thesan和Starforge，在研究星系内恒星和星团形成和演化过程取得了突破性进展。目前，他主要的研究兴趣包括矮星系和银河系类星系形成演化多样性研究、星系周围的重子物质循环过程、巨分子云的形成和演化、大质量星团的形成、球状星团的形成和动力学演化等。他将通过数值模拟技术研究高红移星系、星系内部精细结构、恒星形成区物理过程，并对国内外大型天文仪器（包括JWST、ALMA、HUBS、MUST等）给出精确预测。", "directions": "矮星系和银河系类星系形成演化多样性研究\n星系周围的重子物质循环过程\n巨分子云的形成和演化\n大质量星团的形成\n球状星团的形成和动力学演化", "talent_title": null, "administrative_title": null, "education_experience": null, "work_experience": null, "patent": null, "project": null, "award": null, "paper": null, "social_job": null, "picture": "https://astro.tsinghua.edu.cn/__local/3/F8/86/C7036128B8FE3C4910D306154C7_94B1C6CE_1C6D7.jpg", "education": "研究生", "qualification": "博士", "job_information": 1, "responsibilities": "助理教授", "office_address": "E317", "origin": "https://astro.tsinghua.edu.cn/zh/info/1039/1683.htm"}, {"name": "李惕碚", "school_id": 106, "college_id": 111, "phone": "010-62772789", "email": "litp@tsinghua.edu.cn", "job_title": "教授（退休）", "abstracts": "1. 高能天体物理\n2. 微波背景辐射与早期宇宙\n3. 数据分析方法", "directions": null, "talent_title": null, "administrative_title": null, "education_experience": null, "work_experience": null, "patent": null, "project": null, "award": null, "paper": null, "social_job": null, "picture": "https://astro.tsinghua.edu.cn/__local/0/16/9A/C4410DAFA19A773C9E48D44243F_A5EC3B3F_7278.jpg?e=.jpg", "education": null, "qualification": null, "job_information": 1, "responsibilities": null, "office_address": "E204", "origin": "https://astro.tsinghua.edu.cn/zh/info/1039/1094.htm"}, {"name": "李昕宇", "school_id": 106, "college_id": 111, "phone": null, "email": "xinyuli@mail.tsinghua.edu.cn", "job_title": "助理教授", "abstracts": "李昕宇2019年博士毕业于哥伦比亚大学。加入清华之前他在加拿大理论天体物理研究所进行博士后研究。他的研究兴趣在于通过不同的天体现象的理论研究发现基础物理原理。他的研究课题横跨各种天体物理尺度，从基本粒子如电子和轴子，到中子星、黑洞、星系，直至整个宇宙的大尺度结构。", "directions": null, "talent_title": null, "administrative_title": null, "education_experience": null, "work_experience": null, "patent": null, "project": null, "award": null, "paper": null, "social_job": null, "picture": "https://astro.tsinghua.edu.cn/__local/9/85/87/2B8521E8F72233C92D6D5EC59A6_C68B9078_DA44.jpg", "education": "研究生", "qualification": "博士", "job_information": 1, "responsibilities": "助理教授", "office_address": "E216", "origin": "https://astro.tsinghua.edu.cn/zh/info/1039/2080.htm"}, {"name": "毛俊捷", "school_id": 106, "college_id": 111, "phone": null, "email": "jmao@tsinghua.edu.cn", "job_title": "副教授", "abstracts": "毛俊捷于2022年6月加入清华大学天文系担任助理教授。他的主要研究兴趣围绕着X射线高分辨能谱展开，包括活动星系核等离子体外流风，星系、星系群、星系团中热等离子体的元素丰度，原子物理数据库和天体物理等离子体模型的研发等。", "directions": "X射线高分辨能谱\n活动星系核等离子体外流风\n星系、星系群、星系团中热等离子体的元素丰度\n原子物理数据库\n天体物理等离子体模型", "talent_title": null, "administrative_title": null, "education_experience": null, "work_experience": null, "patent": null, "project": null, "award": null, "paper": null, "social_job": null, "picture": "https://astro.tsinghua.edu.cn/__local/E/6A/23/560AFF65D8D26CA884A347A781E_9D4827E2_15610.jpg", "education": null, "qualification": null, "job_information": 1, "responsibilities": "助理教授", "office_address": "E305", "origin": "https://astro.tsinghua.edu.cn/zh/info/1039/1575.htm"}, {"name": "毛淑德", "school_id": 106, "college_id": 111, "phone": "010-62785861", "email": "smao@tsinghua.edu.cn", "job_title": "教授、系主任", "abstracts": "主要研究兴趣为系外行星搜寻、引力透镜和星系动力学。现为未来大奖科学委员会委员、腾讯探索奖发起人之一。", "directions": null, "talent_title": null, "administrative_title": null, "education_experience": null, "work_experience": null, "patent": null, "project": null, "award": null, "paper": null, "social_job": null, "picture": "https://astro.tsinghua.edu.cn/__local/9/0D/78/EEE2CE32C40C6D30D7064376CB2_B09F2EB1_E5E6.jpg?e=.jpg", "education": null, "qualification": null, "job_information": 1, "responsibilities": null, "office_address": "E306", "origin": "https://astro.tsinghua.edu.cn/zh/info/1039/1093.htm"}, {"name": "茅奕", "school_id": 106, "college_id": 111, "phone": "010-62796503", "email": "ymao@tsinghua.edu.cn", "job_title": "教授", "abstracts": "茅奕教授是理论和计算天体物理学家。他的主要研究兴趣是宇宙再电离时代、宇宙黎明和21厘米宇宙学，主要包括：（1）发展宇宙再电离的数值计算算法和软件，（2）研究21厘米谱线的统计观测量在宇宙再电离时代和宇宙黎明的特征痕迹，（3）应用机器学习算法研究平方公里阵列望远镜的21厘米科学数据处理算法及前景去除方法，（4）在理论上研究低红移21厘米强度映射，合成模拟数据。", "directions": "宇宙再电离时代\n宇宙黎明\n21厘米宇宙学", "talent_title": null, "administrative_title": null, "education_experience": null, "work_experience": null, "patent": null, "project": null, "award": null, "paper": null, "social_job": null, "picture": "https://astro.tsinghua.edu.cn/__local/3/B5/08/6FB45D6732243D8C03EBE38A0F9_98F53B62_363F6.jpg", "education": null, "qualification": null, "job_information": 1, "responsibilities": "副系主任", "office_address": "E321", "origin": "https://astro.tsinghua.edu.cn/zh/info/1039/1092.htm"}, {"name": "Ormel,Chris", "school_id": 106, "college_id": 111, "phone": "010-62788295", "email": "chrisormel@tsinghua.edu.cn", "job_title": "副教授", "abstracts": "The main research area of Prof. Chris Ormel is that of theoretical planet formation. Using a variety of numerical and analytical tools, he tries to understand the structure seen in protoplanetary disks as well as the properties of the population of exoplanets.", "directions": null, "talent_title": null, "administrative_title": null, "education_experience": null, "work_experience": null, "patent": null, "project": null, "award": null, "paper": null, "social_job": null, "picture": "https://astro.tsinghua.edu.cn/__local/E/21/99/4E99A9BF132ED95312DD2DBDB95_AD6F63A5_7151.jpg?e=.jpg", "education": null, "qualification": null, "job_information": 1, "responsibilities": null, "office_address": "E223", "origin": "https://astro.tsinghua.edu.cn/zh/info/1039/1091.htm"}, {"name": "王雪凇", "school_id": 106, "college_id": 111, "phone": null, "email": "sharonw@tsinghua.edu.cn", "job_title": "副教授", "abstracts": "王雪凇的主要研究方向是系外行星的寻找和测定，尤其是类似地球的、可能宜居的岩质行星。她的主要研究内容包括用视向速度法观测系外行星，通过光谱数据分析来提高视向速度的精度，以及结合空间光学望远镜和地面视向速度测定来了解恒星本身的视向速度信号干扰（RVx项目，详见RVxTESS.com）。王雪凇是多个系外行星测定和巡天以及视向速度仪器组成员，包括追踪和研究TESS卫星发现的系外行星的Magellan TESS Survey，利用小望远镜组观测系外行星的MINERVA计划，以及最新的高精度WIYN/NEID视向速度光谱仪。王雪凇于2020年秋季入职清华天文系，在此之前她作为卡内基学者博士后在卡内基天文台和地磁所（现地球行星实验室）工作，其博士毕业于宾夕法尼亚州立大学天文系。", "directions": "系外行星的寻找和测定\n类似地球的、可能宜居的岩质行星\n视向速度法观测系外行星\n光谱数据分析\n空间光学望远镜和地面视向速度测定", "talent_title": null, "administrative_title": null, "education_experience": "宾夕法尼亚州立大学天文系博士", "work_experience": "卡内基天文台和地磁所（现地球行星实验室）卡内基学者博士后\n清华天文系副教授", "patent": null, "project": null, "award": null, "paper": null, "social_job": null, "picture": "https://astro.tsinghua.edu.cn/__local/5/40/2A/431F95CE876E6B0AC6497BA3DF2_1D284B4D_4D6C.jpg?e=.jpg", "education": "研究生", "qualification": "博士", "job_information": 1, "responsibilities": "副教授", "office_address": "E320", "origin": "https://astro.tsinghua.edu.cn/zh/info/1039/1090.htm"}, {"name": "许丹丹", "school_id": 106, "college_id": 111, "phone": "010-62797582", "email": "dandanxu@tsinghua.edu.cn", "job_title": "副教授", "abstracts": "引力透镜是天体物理及宇宙学领域的重要研究工具。它帮助我们测量星系的质量和结构、以及宇宙在更大尺度上的物质分布。这些重要的天体物理学信息不仅帮助我们构建起关于星系形成及演化的理论体系，更通过太空实验室环境，间接为诸多基础物理学问题提供线索，比如宇宙的“黑暗”组分以及引力物理。我的主要研究课题是利用引力透镜探究星系演化和暗物质物理。特别的，我使用数值计算和模拟方法来研究星系理论演化的相关问题，评价观测拟合模型及数据阐释中存在的系统误差；同时开发新的实测方法用于测量星系物质分布及限制暗物质宇宙学模型。", "directions": null, "talent_title": null, "administrative_title": null, "education_experience": null, "work_experience": null, "patent": null, "project": null, "award": null, "paper": null, "social_job": null, "picture": "https://astro.tsinghua.edu.cn/__local/4/D1/80/7A073FA71C33B0D1DE50493D85D_351EA1F2_B1E5.jpg?e=.jpg", "education": null, "qualification": null, "job_information": 1, "responsibilities": null, "office_address": "E221", "origin": "https://astro.tsinghua.edu.cn/zh/info/1039/1089.htm"}, {"name": "杨桓", "school_id": 106, "college_id": 111, "phone": null, "email": "hyangdoa@tsinghua.edu.cn", "job_title": "副教授", "abstracts": "我主要从事引力波天文学相关的理论研究。我近期的研究兴趣包括各种强引力场的动力学现象，高能的天体瞬变现象，致密星体的多信使（包括引力波，电磁信号和中微子）研究 以及对下一代引力波探测器的发展研究。我是空间引力波项目LISA合作组织和地面引力波项目LIGO科学组织成员。", "directions": null, "talent_title": null, "administrative_title": null, "education_experience": null, "work_experience": null, "patent": null, "project": null, "award": null, "paper": null, "social_job": null, "picture": "https://astro.tsinghua.edu.cn/__local/2/91/4C/F8AC36CB404762F5F70D6683C79_647D30CB_13AE4.png", "education": null, "qualification": null, "job_information": 1, "responsibilities": null, "office_address": "E215", "origin": "https://astro.tsinghua.edu.cn/zh/info/1039/2148.htm"}, {"name": "赵成", "school_id": 106, "college_id": 111, "phone": null, "email": "czhao@tsinghua.edu.cn", "job_title": "助理教授", "abstracts": "赵成2018年博士毕业于清华大学物理系，随后在瑞士洛桑联邦理工学院从事博士后研究工作，并于2023年5月加入清华大学天文系。他主要从事依托大规模星系巡天和高精度数值模拟的宇宙大尺度结构研究，先后参与了重子振荡光谱巡天(BOSS)、扩展重子震荡光谱巡天(eBOSS)、暗能量光谱仪(DESI)等一系列国际大型光谱巡天项目，承担了涵盖数值模拟、理论建模、数据分析与宇宙学应用等方向的多项研究课题。目前，他的研究兴趣主要包括：（1）基于多种观测探针、多种示踪天体的宇宙学参数测量，（2）发展适用于巡天观测的高精度宇宙大尺度数值模拟，（3）开发高效率、高可靠性的宇宙学数据处理与数值分析算法。", "directions": "基于多种观测探针、多种示踪天体的宇宙学参数测量\n发展适用于巡天观测的高精度宇宙大尺度数值模拟\n开发高效率、高可靠性的宇宙学数据处理与数值分析算法", "talent_title": null, "administrative_title": null, "education_experience": "2018年博士毕业于清华大学物理系", "work_experience": "在瑞士洛桑联邦理工学院从事博士后研究工作\n2023年5月加入清华大学天文系", "patent": null, "project": null, "award": null, "paper": null, "social_job": null, "picture": "https://astro.tsinghua.edu.cn/__local/A/7F/00/D4784F1E81627B6734F36CF79B0_2BCBCFC5_59A34.jpg", "education": "研究生", "qualification": "博士", "job_information": 1, "responsibilities": "助理教授", "office_address": "E220", "origin": "https://astro.tsinghua.edu.cn/zh/info/1039/1747.htm"}, {"name": "祝伟", "school_id": 106, "college_id": 111, "phone": null, "email": "weizhu@tsinghua.edu.cn", "job_title": "副教授", "abstracts": "祝伟于2017年博士毕业于美国俄亥俄州立大学，之后在加拿大多伦多大学从事博士后研究工作，并于2021年春季加入清华天文系。祝伟的主要研究方向是系外行星。通过结合微引力透镜法、掩食法、视向速度法和天体测量法等不同的探测方法，他系统地搜寻和认证那些围绕其他恒星绕转的行星，研究这些行星的统计分布和系统构型，并基于此来限制行星形成和演化的理论模型。除此之外，祝伟对致密天体的搜寻也很感兴趣。理论工作表明，能产生可探测引力波的双黑洞系统只占所有恒星质量黑洞的很小一部分。对无法用引力波探测到的恒星级黑洞的研究对人们认识黑洞形成和分布具有重要意义。", "directions": "系外行星\n致密天体的搜寻", "talent_title": null, "administrative_title": null, "education_experience": "2017年博士毕业于美国俄亥俄州立大学", "work_experience": "在加拿大多伦多大学从事博士后研究工作\n2021年春季加入清华天文系", "patent": null, "project": null, "award": null, "paper": null, "social_job": null, "picture": "https://astro.tsinghua.edu.cn/__local/3/56/4B/89B12B9DEBCE2EF5EA7C112230B_61C7FA45_5238.jpg?e=.jpg", "education": "研究生", "qualification": "博士", "job_information": 1, "responsibilities": "副教授", "office_address": "E318", "origin": "https://astro.tsinghua.edu.cn/zh/info/1039/1088.htm"}, {"name": "白雪宁", "school_id": 106, "college_id": 111, "phone": "010-62789981", "email": "xbai@tsinghua.edu.cn", "job_title": "教授", "abstracts": null, "directions": null, "talent_title": null, "administrative_title": null, "education_experience": null, "work_experience": null, "patent": null, "project": null, "award": null, "paper": null, "social_job": null, "picture": "https://astro.tsinghua.edu.cn/__local/C/8D/CA/24BA0B0C0032B07C27B992E3468_B0182676_BC26.jpg?e=.jpg", "education": null, "qualification": null, "job_information": 1, "responsibilities": null, "office_address": "E316, 科学馆312", "origin": "https://astro.tsinghua.edu.cn/zh/info/1040/1087.htm"}]